OUTPUT_DIRECTORY        = @CMAKE_CURRENT_SOURCE_DIR@/../docs
INPUT                   = @CMAKE_CURRENT_SOURCE_DIR@/../src @CMAKE_CURRENT_SOURCE_DIR@/../Readme.md @CMAKE_CURRENT_SOURCE_DIR@/../doxygen

PROJECT_NAME            = "@CMAKE_PROJECT_NAME@"
PROJECT_NUMBER          = @PROJECT_VERSION_MAJOR@.@PROJECT_VERSION_MINOR@.@PROJECT_VERSION_PATCH@

USE_MDFILE_AS_MAINPAGE  = "@CMAKE_CURRENT_SOURCE_DIR@/../Readme.md"

HTML_OUTPUT             = .

RECURSIVE               = YES

WARN_IF_UNDOCUMENTED    = NO
QUIET                   = YES

GENERATE_LATEX          = NO
GENERATE_TODOLIST       = YES

SOURCE_BROWSER          = YES
STRIP_CODE_COMMENTS     = NO
FULL_PATH_NAMES         = NO

# extract also private members
EXTRACT_PRIVATE = YES

# graphviz and UML diagrams
EXTRACT_ALL             = YES
HIDE_UNDOC_RELATIONS    = NO
HAVE_DOT                = YES
CLASS_GRAPH             = YES
COLLABORATION_GRAPH     = YES
UML_LOOK                = YES
UML_LIMIT_NUM_FIELDS    = 50
TEMPLATE_RELATIONS      = YES
DOT_GRAPH_MAX_NODES     = 100
MAX_DOT_GRAPH_DEPTH     = 0
DOT_TRANSPARENT         = YES
DOT_IMAGE_FORMAT        = svg

# doxygen-awesome
GENERATE_TREEVIEW      = YES
HTML_EXTRA_STYLESHEET  = @CMAKE_CURRENT_BINARY_DIR@/doxygen-awesome.css